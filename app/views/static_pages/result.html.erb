<%address=params[:search]%>
<%@spots=get_spots(address)%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spots.each do |spot| %>
      <tr>
        <td><%= spot.name %></td>
        <td><%= spot.rating %></td>
        <td><%= link_to 'Details', "/details?place_id="+spot.place_id %></td>
        <!-- passa alla pagina details direttamente il place_id dello spot -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
