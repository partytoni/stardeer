

<tr>
  <h1>
    <%= image_tag(current_user.avatar_url, size: "100x100") if current_user.avatar? %>
    <%=current_user.name%>
  </h1>
</tr>

<%= link_to "Chi segui e chi ti si incula", "/your_follows" %>
<br>
<br>

<table style="margin:auto;">
  <thead>
    <tr>
      <th>Name of the Author</th>
      <th>Review</th>
      <th>Place</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% posts=Post.where("user_id = "+current_user.id.to_s)%>
    <% posts.each do |p|%>
      <% place=Place.where("id = "+p.place_id.to_s) %>
      <tr>
        <%= current_user.name%>
        <%= p.text %>
        <%= place.first.name %>
        <%= link_to callback_url(p), callback_url(p) %>
        <!-- passa alla pagina details direttamente il place_place_id dello spot -->
      </tr>
      <br>
    <% end %>
  </tbody>
</table>
