<% place_id=params[:place_id] %>
<% place = get_place_by_id(place_id) %>
<% photos=get_photos(place_id)%>


<table>
  <thead>
    <tr>
      <th colspan="3"><%= place.name %></th>
    </tr>

    <tr>
      <th>Rating num</th>
      <th>Name of the Author</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>

  </thead>

  <tbody>
    <% place.reviews.each do |review| %>
    <tr>
      <td><%= review.rating %></td>
      <td><%= link_to review.author_name, review.author_url , target: :_blank%></td>
      <td><%= review.text %></td>
      <!-- passa alla pagina details direttamente il place_place_id dello spot -->
      <% end %>
    </tr>
  </tbody>
</table>

<% photos.each do |p| %>
<%link="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference="+p.photo_reference+"&key="+API_KEY %>
<%= image_tag(get_image(link))%>
<br><br><br><br><br><br><br>
<%end%>
