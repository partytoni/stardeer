<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <% lista=users_posts() %>
        <% lista.each do |l| %>
          <%=l %>
          <br>
        <%end%>
      </ol>
    <% end %>
  </div>
</div>
